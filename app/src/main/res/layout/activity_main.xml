<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAlignment="textEnd"
        android:textSize="48sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:textAlignment="center"
        app:columnCount="4"
        app:rowCount="5"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/num1"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num1"
            android:text="1"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/num4"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num4"
            android:text="4"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/num7"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num7"
            android:text="7"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/dot"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="dot"
            android:text=","
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="sqrt"
            android:text="sqrt"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/num2"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num2"
            android:text="2"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/num5"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num5"
            android:text="5"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/num8"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num8"
            android:text="8"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/num0"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num0"
            android:text="0"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/inverseProp"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="inverseProp"
            android:text="1/x"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/num3"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num3"
            android:text="3"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/num6"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num6"
            android:text="6"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/num9"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="num9"
            android:text="9"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonClearr"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="clear"
            android:text="C"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/inversion"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="inversion"
            android:text="+/-"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="add"
            android:text="+"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/sub"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="sub"
            android:text="-"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/div"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="div"
            android:text="/"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/mul"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="mul"
            android:text="*"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/res"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:onClick="res"
            android:text="="
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="4" />
    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>